<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>300 Club Raffle</title>
  <style>
    body { font-family: Arial, sans-serif; margin: 2em; background: #f9f9f9; }
    h1 { color: #004488; }
    .container { display: flex; gap: 2em; }
    .list-box { padding: 1em; background: #fff; border: 1px solid #ccc; border-radius: 5px; width: 300px; min-height: 200px;}
    button { padding: 0.6em 1em; font-size: 1rem; margin-bottom: 1em; }
    .drawn-num { font-size: 2em; color: #b22222; margin-bottom: 1em; }
    .number-list { font-size: 0.95em; word-break: break-all; }
  </style>
</head>
<body>
  <h1>300 Club Raffle</h1>
  <button id="drawBtn">Draw Next Number</button>
  <button id="resetBtn">Reset Raffle</button>
  <div class="drawn-num" id="drawnNum"></div>
  <div class="container">
    <div class="list-box">
      <h2>Remaining Numbers</h2>
      <div class="number-list" id="remainingList"></div>
    </div>
    <div class="list-box">
      <h2>Eliminated Numbers</h2>
      <div class="number-list" id="eliminatedList"></div>
    </div>
  </div>
  <script>
    let remaining = Array.from({length: 300}, (_, i) => i + 1);
    let eliminated = [];

    const drawBtn = document.getElementById('drawBtn');
    const resetBtn = document.getElementById('resetBtn');
    const drawnNum = document.getElementById('drawnNum');
    const remainingList = document.getElementById('remainingList');
    const eliminatedList = document.getElementById('eliminatedList');

    function updateLists() {
      remainingList.textContent = remaining.join(', ');
      eliminatedList.textContent = eliminated.join(', ');
    }

    drawBtn.onclick = () => {
      if (remaining.length === 0) {
        drawnNum.textContent = "All numbers have been drawn!";
        return;
      }
      const idx = Math.floor(Math.random() * remaining.length);
      const num = remaining.splice(idx, 1)[0];
      eliminated.push(num);
      drawnNum.textContent = `Drawn Number: ${num}`;
      updateLists();
    };

    resetBtn.onclick = () => {
      remaining = Array.from({length: 300}, (_, i) => i + 1);
      eliminated = [];
      drawnNum.textContent = '';
      updateLists();
    };

    // Initial render
    updateLists();
  </script>
</body>
</html>
